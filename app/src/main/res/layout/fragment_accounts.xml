<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".ui.fragments.AccountsFragment">    <com.google.android.material.appbar.MaterialToolbar        android:id="@+id/toolbar_accounts"        android:layout_width="match_parent"        android:layout_height="?attr/actionBarSize"        app:navigationIcon="@drawable/ic_arrow_back"        app:title="Счета" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recycler_accounts"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"        tools:listitem="@layout/item_account" /></LinearLayout>